<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hikage.japanmahjong.Game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_point3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:rotation="180"
            android:text="@string/point_25000"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_name3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:rotation="180"
            android:text="@string/player_north"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/img_player3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:rotation="180"
            android:src="@mipmap/tile_n" />

        <ImageView
            android:id="@+id/img_arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:src="@mipmap/arrow"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_richi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/point_h"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_arrow0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@mipmap/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_player0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:rotation="90"
                android:src="@mipmap/tile_e" />

            <TextView
                android:id="@+id/tv_name0"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:gravity="center_horizontal"
                android:rotation="90"
                android:text="@string/player_east"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationX="-27dp" />

            <TextView
                android:id="@+id/tv_point0"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:rotation="90"
                android:text="@string/point_25000"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationX="-50dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_richi0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_v"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_throwDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/touch_me"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/lv_dice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="onClick">

                <ImageView
                    android:id="@+id/img_dice1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/dice_1" />

                <ImageView
                    android:id="@+id/img_dice2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/dice_6" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_gameRound"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="@string/game_info"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/renchan" />

                <TextView
                    android:id="@+id/tv_renchan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/x_0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_h" />

                <TextView
                    android:id="@+id/tv_richi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/x_0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_richi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/point_v"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_point2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:rotation="270"
                android:text="@string/point_25000"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationX="50dp" />

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:rotation="270"
                android:text="@string/player_west"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationX="-20dp" />

            <ImageView
                android:id="@+id/img_player2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:onClick="onClick"
                android:rotation="270"
                android:src="@mipmap/tile_w" />

            <ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:src="@mipmap/arrow"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_richi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/point_h"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_player1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:src="@mipmap/tile_s" />

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:text="@string/player_south"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_point1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:text="@string/point_25000"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>
